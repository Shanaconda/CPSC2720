}

TEST(TestCuboid, getHeight) {
  Cuboid a(5, 4, 2);
  EXPECT_EQ(5, a.getHeight());
}

TEST(TestCuboid, getLength) {
  Cuboid a(5, 4, 2);
  EXPECT_EQ(5, a.getLength());
}

